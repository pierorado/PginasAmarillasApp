<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.DetailCompanyActivity">

    <ImageView
        android:layout_marginTop="50dp"
        android:id="@+id/picture_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp"
        />
    <TextView
        android:id="@+id/category_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorNegro"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:layout_toEndOf="@+id/picture_image"
        android:textSize="28sp"
        android:textStyle="bold"
        android:text="Categoria"
        />
    <TextView
        android:id="@+id/fullname_text"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/picture_image"
        android:layout_below="@+id/category_text"
        android:layout_marginBottom="8dp"
        android:textSize="20sp"
        android:text="Nombre"/>
    <TextView
        android:id="@+id/adrees_text"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/category_text"
        android:layout_below="@+id/fullname_text"
        android:layout_marginBottom="8dp"
        android:textSize="20sp"
        android:text="Direccion"/>
    <TextView
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/fullname_text"
        android:layout_below="@+id/adrees_text"
        android:layout_marginBottom="8dp"
        android:textSize="20sp"
        android:text="Informacion"/>
</LinearLayout>